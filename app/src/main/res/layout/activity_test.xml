<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TestActivity">



    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:onClick="btn1"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:onClick="btn2"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:onClick="btn3"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:onClick="btn4"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn5"
            android:onClick="btn5"
            android:text="5"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn6"
            android:onClick="btn6"
            android:text="6"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:onClick="btn7"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:id="@+id/btn8"
            android:onClick="btn8"
            android:text="8"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:onClick="btn9"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:id="@+id/delete"
            android:onClick="btnBack"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:paddingStart="35dp"
            app:icon="@drawable/ic_baseline_backspace_24"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn0"
            android:onClick="btn0"
            android:text="0"
            android:textSize="35sp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:id="@+id/enter"
            android:layout_width="120dp"
            android:paddingStart="35dp"
            android:onClick="btnDone"
            app:icon = "@drawable/ic_baseline_done_24"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="35sp" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>